<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="LeaderboardGridPane" stylesheets="@css/Leaderbord.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fitquest.Controller.LeaderbordController">
    <center>
        <VBox fx:id="vboxLeaderboard" alignment="CENTER" spacing="50.0" BorderPane.alignment="TOP_CENTER">
            <VBox alignment="CENTER">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Andale Mono';" text="1. Myron Champ - 550" textFill="#d7c010" />
                <Label style="-fx-font-size: 18px;-fx-font-weight: bold; -fx-font-family: 'Andale Mono';" text="2. Huge Dik - 440" />
                <Label style="-fx-font-size: 18px;-fx-font-weight: bold; -fx-font-family: 'Andale Mono';" text="3. Sam Sung - 420" />
                <Label style="-fx-font-size: 18px;-fx-font-weight: bold; -fx-font-family: 'Andale Mono';" text="4. Juan Direction - 200" />
                <Label style="-fx-font-size: 18px;-fx-font-weight: bold; -fx-font-family: 'Andale Mono';" text="5. Hugh Mungus - 170" />
            </VBox>

            <!-- User Score Display -->
            <Label fx:id="myQuestsUserScore" style="-fx-font-size: 20px; -fx-text-fill: #318d02;-fx-font-weight: bold; -fx-font-family: 'Andale Mono';" text="Your Score: 50" textFill="#c8ffd1" />
         <BorderPane.margin>
            <Insets top="200.0" />
         </BorderPane.margin>
        </VBox>
    </center>

   <bottom>
         <!-- Menu Button -->
         <Button fx:id="menuButton" onAction="#onMenuClick" BorderPane.alignment="BOTTOM_RIGHT">
             <graphic>
                 <ImageView fitHeight="27.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                     <Image url="@images/homeButton.png" />
                 </ImageView>
             </graphic>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         </Button>
   </bottom>
</BorderPane>
