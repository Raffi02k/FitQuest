<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="MyQuestGridPane" stylesheets="@css/myquest.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fitquest.Controller.MyQuestsController">
   <center>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <Label fx:id="myQuestsUserScoreLabel" textFill="red" />
         <Button mnemonicParsing="false" onMouseClicked="#myQuestsFinishButtonClicked" text="Quest finished" />
         <ListView fx:id="myQuestsListView" maxHeight="300.0" maxWidth="300.0" onMouseReleased="#myQuestsListClicked" />
         <TextArea fx:id="myQuestsDescriptionTextArea" maxHeight="100.0" maxWidth="300.0" />
         <BorderPane.margin>
            <Insets top="150.0" />
         </BorderPane.margin>
      </VBox>
   </center>

   <bottom>
      <Button accessibleRole="MENU_BUTTON" mnemonicParsing="false" onAction="#onMenuClick" BorderPane.alignment="BOTTOM_RIGHT">
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0">
               <Image url="@images/homeButton.png" />
            </ImageView>
         </graphic>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <top>
      <Button fx:id="groupButton" onAction="#resetButtonClicked" BorderPane.alignment="TOP_RIGHT">
         <graphic>
            <ImageView fitHeight="27.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@images/groupButton.png" />
            </ImageView>
         </graphic>
         <BorderPane.margin>
            <Insets right="10.0" top="10.0" />
         </BorderPane.margin>
      </Button>
   </top>

</BorderPane>
